<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/card_stroke"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="0dp">

        <!-- Date and Score Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingHorizontal="16dp">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:letterSpacing="0.05"
                android:textAllCaps="true"
                android:textColor="@color/text_date"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <garagem.ideias.dogwalkingforecast.view.CircularScoreView
                android:id="@+id/scoreView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginVertical="8dp"/>

            <TextView
                android:id="@+id/recommendationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:letterSpacing="0.1"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="@color/text_recommendation"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/card_stroke"
            android:layout_marginVertical="12dp"
            android:layout_marginHorizontal="16dp"/>

        <!-- Weather Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/info_background"
            android:padding="16dp"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:letterSpacing="0.02"
                android:textColor="@color/text_date"/>

            <TextView
                android:id="@+id/descriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_date"/>

            <TextView
                android:id="@+id/groundTempText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/text_date"/>

            <TextView
                android:id="@+id/uvIndexText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_date"/>

            <TextView
                android:id="@+id/airQualityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_date"/>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 